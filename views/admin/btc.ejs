<%- include('./partials/head.ejs') %> 
<style>
  .main-title{
    font-size: 16px;
    font-weight: 400;
  }

  .main-date{
    font-size: 18px;
    font-weight: 400;
  }

  .data-form{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    border-radius: 10px;
    padding: 30px;
    margin-top: 20px;
    box-shadow: 4px 3px 10px 0px rgba(0, 0, 0, 0.047);
  }

  .input-text{
    margin-bottom: 10px;
    padding: 10px;
    width: 200px;
    border: 1px solid #333;
    border-radius: 5px;
  }

  .choose-time{
    margin-bottom: 10px;
  }

  .submit-btn{
    padding: 10px 30px;
    background: #3a86ff;
    color: #fff;
    border: none;
    outline: none;
    box-shadow: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .main-panel-btn{
    text-decoration: underline;
    font-size: 14px;
    margin: 10px auto;
    color: #333;
    text-align: center;
  }

  .alert-div{
    background-color: #3a86ff;
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    text-align: center;
  }
</style>
  <body>
    <%- include('./partials/app_title.ejs') %> 
    <h1 class="main-title">Manage BTC</h1>
    <h1 class="main-date"><%= moment(new Date()).format('D/M/YYYY') %> </h1>
    <form class="data-form" action="/panel/btc" method="POST">
      <input class="input-text" type="text" name="set" placeholder="Set (123.45)"   />
      <input class="input-text" type="text" name="value" placeholder="Value (1.23)" />
      <button  class="submit-btn" type="submit">Add</button>
    </form>
    <div style="display: flex">
      <a class="main-panel-btn" href="/panel">Go Back Main Panel</a>
    </div>
  </body>
</html>
